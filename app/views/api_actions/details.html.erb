<h2><%= @api_action.name %></h2>

<% api_examples = @api_action.api_examples %>

<% if @api_action.query_parameters.present? %>

  <div>
    <h3 class="subheader">Query Parameters</h3>
    <table class="small-12 large-6">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Example values</th>
        </tr>
      </thead>
      <tbody>
        <% @api_action.query_parameters.each do |query_parameter| %>
          <tr>
            <td><code><%= query_parameter.name %></code></td>
            <td><%= query_parameter.type_name %></td>
            <td>
              <ul>
                <% query_parameter.example_values.each do |example_value|%>
                  <li><%= example_value %></li>
                <% end %>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>


<div>
  <h3 class="subheader">Examples</h3>
  <dl id="example-tabs" class="tabs vertical" data-tab>
    <% api_examples.each_with_index do |api_example, index| %>
      <dd class="<%= index == 0 && 'active'%>" >
        <%= link_to truncate(api_example.description, length: 30) || "Example #{index + 1}",  "#panel#{index}" %>
      </dd>
    <% end %>
  </dl>
  <div id="example-panels" class="tabs-content vertical">
    <%= render partial: 'api_examples/api_example', collection: api_examples, as: :api_example %>
  </div>
</div>